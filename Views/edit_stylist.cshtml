<h1>Edit Stylist</h1>
<hr />
<h2>Edit Stylist: @Model.GetName()</h2>
<form action="/stylist/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="stylist-id" type="hidden" value="@Model.GetId()">
  <label for="stylist-name">Stylist Name</label>
  <input id="stylist-name" name="stylist-name" type="text">
  <label for="stylist-phone">Stylist Phone Number</label>
  <input id="stylist-phone" name="stylist-phone" type="text">
  <label for="stylist-email">Stylist Email Address</label>
  <input id="stylist-email" name="stylist-email" type="text">
  <button type="submit">Submit</button>
</form>
<h4><a href="/">Return home</a></h4>
