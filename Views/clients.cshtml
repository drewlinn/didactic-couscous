<h1>All Clients</h1>
@if(@Model.Count == 0)
{
  <h3>You have not added any Clients</h3>
}
@foreach(var client in Model)
{
  <ul>
    <li><a href="/clients/@client.GetId()">@client.GetName()</a></li>
  </ul>
}
<p><a href="/client/new">Add a new Client</a></p>
<form action="/clients/cleared" method="post">
    <button type="submit">Clear all Clients</button>
</form>
<p><a href="/">Return Home</a></p>
